extends ../name_layout

block content
	.name-detail

		.row
			for proverb in proverbs
				.col-sm-4.col-lg-2
					.proverb-detail
						p
							b #{proverb.proverb}
						p !{(proverb.proverb).replace(/\n/g, '<br/>').replace('<br/><br/>' , '<br/>' )}
						p #{proverb.literal}
						p #{proverb.translation}
						p Ethnic Name : #{proverb.ethnic_group.eyon}