extends ../../layouts/reply_layout

block content
	
	.reply-add

		ul.ajax

		if errors
			.form-errors
				p Errors found trying to process form. These include : -
				ul.alert.alert-danger.errors
					for error in errors
						if error.msg
							li!= error.msg
						else
							li!= error.message

		form(method ='post' ,	action ='' enctype ='application/x-www-form-urlencoded')

			h2 Add a Reply to Comment

			p.comment-reply 
				b Comment: 
				| #{comment.text}

			.form-group
				label(for ='text') Reply * :
				textarea(id ='text' name ='text' class ='form-control form-control-sm') #{(undefined === reply ? '' : (undefined === reply.text ? reply.reply.text : reply.text))}

			.form-group
				input(type ='hidden' id ='commentauthorname' name ='commentauthorname' value =(comment.author ? comment.author.full_name : ''))

			.form-group
				input(type ='hidden' id ='link' value ='reply')

			p
				button(type ='submit' title ='Submit' class ='btn btn-primary float-right px-4' id ='formSubmit') Submit