extends ../layouts/comment_layout

block content
	
	.comment-add

		ul.ajax

		if errors
			.form-errors
				p Errors found trying to process form. These include : -
				ul.alert.alert-danger.errors
					for error in errors
						if error.msg
							li!= error.msg
						else
							li!= error.message

		form(method ='post' ,	action ='' enctype ='application/x-www-form-urlencoded')

			h2 Add a Comment

			.form-group
				label(for ='text') Comment * :
				textarea(id ='text' name ='text' class ='form-control form-control-sm') #{(undefined === comment ? '' : (undefined === comment.text ? comment.comment.text : comment.text))}

			.form-group
				input(type ='hidden' id ='link' value ='comment')

			p
				button(type ='submit' title ='Submit' class ='btn btn-primary float-right px-4' id ='formSubmit') Submit